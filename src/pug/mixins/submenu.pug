include ./svg.pug

mixin submenu(item)
    .submenu
        input.submenu__check(type="checkbox")
        header.submenu__header
            .submenu__title= item.name 
            .submenu__arrow.submenu__arrow_down
                +svg("","arrowDown")
            .submenu__arrow.submenu__arrow_top
                +svg("","arrowTop")
        main.submenu__main 
            ul.submenu__nav 
                each i in item.submenu 
                    li.submenu__item
                        a(href=i.href)= i.name 